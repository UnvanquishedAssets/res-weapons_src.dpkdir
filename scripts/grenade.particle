particles/weapons/grenade/impact_trail
{
	ejector
	{
		particle
		{
			shader sync gfx/weapons/grenade/smoke

			displacement 0 0 -40 ~60

			velocityType      static
			velocityDir       linear
			velocityMagnitude 5
			velocity          0 0 1 ~360

			radius 0 105~75% 65~75%
			alpha  0 .6 0
			rotation 0 ~360 -
			bounce 0

			//overdrawProtection

			lifeTime 4500
		}

		count 4
		delay 50
		period 40 - 0
	}
}

