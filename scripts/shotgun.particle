particles/weapons/shotgun/impact
{
	ejector
	{
		particle
		{
			displacement 0 0 0 ~0

			velocityType normal
			velocityDir linear
			velocityMagnitude 175~20
			velocity 0 0 0 ~10

			accelerationType static
			accelerationDir linear
			accelerationMagnitude 350
			acceleration 0 0 -1 0

			radius 0 50 15
			alpha 0 1 1
			bounce 0
			rotation 0 0 50
			lifeTime 150

			childTrailSystem trails/weapons/rifle/impact_puff
		}

		count 1
		delay 0
		period 0 - ~0%
	}

	ejector
	{
		particle
		{
			shader sync gfx/weapons/rifle/verysmallrock

			displacement 0 0 0 ~5

			velocityType normal
			velocityDir linear
			velocityMagnitude 200
			velocity 0 0 0 ~120

			accelerationType static
			accelerationDir linear
			accelerationMagnitude 600
			acceleration 0 0 -1 0

			radius 0 1 1
			alpha 0 1 0
			rotation 0 ~360 -
			bounce .7

			lifeTime 550
		}

		count 1
		delay ~100
		period 0 - ~0%
	}

	ejector
	{
		particle
		{
			shader sync gfx/weapons/rifle/smoke

			displacement 0 0 0 ~1
			normalDisplacement -30

			velocityType normal
			velocityDir linear
			velocityMagnitude 80
			velocity 0 0 0 0

			accelerationType static
			accelerationDir linear
			accelerationMagnitude 120
			acceleration 0 0 -1 0

			radius 0 20 30
			alpha 0 .4 0
			rotation 0 ~360 -
			bounce 0

			lifeTime 575
		}

		count 1
		delay 150~100
		period 0 - ~0%
	}
}

